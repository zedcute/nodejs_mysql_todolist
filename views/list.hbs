<div class="container">
    <div class="form-group mt-5">
        <div class="row justify-content-center">
            <h1>Todo List</h1>
        </div>
         <form action="/list/{{id}}" method="POST" class="row justify-content-center">
            <input type="text" class="form-control col-md-3" placeholder="Create your list" id="inputDefault" name="mylist">
            <button class="btn btn-primary ml-1" type="submit">Create</button>
        </form>

        <div class="row justify-content-center mt-5">
                <table class="table table-hover col-md-6">
                    <thead>
                        <tr class="table-primary">
                        <th scope="col">Task</th>
                        <th scope="col">Owner</th>
                        <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each lists}}
                        <tr class="table-default">
                            <th scope="row">
                                <input type="checkbox"> {{this.listName}}
                            </th>
                            <th>
                                {{this.owner}}
                            </th>
                            <td><a href="#">Delete</a></td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
        </div>

        

    </div>
</div>